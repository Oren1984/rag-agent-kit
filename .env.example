# .env file for RAG Agent Kit

# ======================
# Core
# ======================
APP_NAME=rag-agent-kit
APP_ENV=dev
LOG_LEVEL=INFO

# ======================
# Security (REQUIRED)
# ======================
RAG_API_KEY=change-me

# ======================
# Providers
# ======================
LLM_PROVIDER=openai   # openai|gemini|anthropic
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# ======================
# Rate limiting (default ON)
# ======================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ======================
# CORS (default OFF / locked)
# ======================
CORS_ENABLED=false
CORS_ORIGINS=

# ======================
# Web Search (default OFF)
# ======================
WEB_SEARCH_ENABLED=false
WEB_SEARCH_PROVIDER=serper
WEB_SEARCH_API_KEY=

# ======================
# Connectors
# ======================
CONNECTOR=rest   # rest|files
APP_BASE_URL=http://localhost:5000
FILES_BASE_PATH=data

# ======================
# Vector Store
# ======================
VECTORSTORE=memory     # memory|pgvector
PG_DSN=postgresql://rag:rag@127.0.0.1:5432/rag
PG_COLLECTION=rag_docs
